@page
@model ASPNetCoreEFCoreFacit.Pages.Validering.BilRegModel
@{
}



<div class="row">
    <div class="col-lg-12 mb-5">
        <div class="card">
            <div class="card-header">
                <h3 class="h6 text-uppercase mb-0">Skapa ny bil</h3>
            </div>

            <div class="card-body">
                <form method="post">



                    <div class="form-group">
                        <label asp-for="Manufacturer">Manufacturer</label>
                        <input class="form-control" asp-for="Manufacturer">
                        <span asp-validation-for="Manufacturer" class="field-validation-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Model">Model</label>
                        <input class="form-control" asp-for="Model">
                        <span asp-validation-for="Model" class="field-validation-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RegNo">RegNo</label>
                        <input class="form-control" asp-for="RegNo">
                        <span asp-validation-for="RegNo" class="field-validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Year">Year</label>
                        <input class="form-control" asp-for="Year">
                        <span asp-validation-for="Year" class="field-validation-error"></span>
                    </div>


                    <button type="submit" class="btn btn-primary">Spara</button>
                </form>
            </div>

        </div>

    </div>
</div>



@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
