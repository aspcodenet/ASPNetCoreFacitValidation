@page
@model ASPNetCoreEFCoreFacit.Pages.Validering.DatumModel
@{
}




<div class="row">
    <div class="col-lg-12 mb-5">
        <div class="card">
            <div class="card-header">
                <h3 class="h6 text-uppercase mb-0">Skapa nytt datum</h3>
            </div>

            <div class="card-body">
                <form method="post">



                    <div class="form-group">
                        <label asp-for="Year">År</label>
                        <input class="form-control" asp-for="Year">
                        <span asp-validation-for="Year" class="field-validation-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Month">Månad</label>
                        <input class="form-control" asp-for="Month">
                        <span asp-validation-for="Month" class="field-validation-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Day">Dag</label>
                        <input class="form-control" asp-for="Day">
                        <span asp-validation-for="Day" class="field-validation-error"></span>
                    </div>



                    <button type="submit" class="btn btn-primary">Spara</button>
                </form>
            </div>

        </div>

    </div>
</div>



@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
