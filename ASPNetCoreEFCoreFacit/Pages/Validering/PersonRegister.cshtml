@page
@model ASPNetCoreEFCoreFacit.Pages.Validering.PersonRegisterModel
@{
}


<div class="row">
    <div class="col-lg-12 mb-5">
        <div class="card">
            <div class="card-header">
                <h3 class="h6 text-uppercase mb-0">Skapa nytt person</h3>
            </div>

            <div class="card-body">
                <form method="post">



                    <div class="form-group">
                        <label asp-for="Username">Username</label>
                        <input class="form-control" asp-for="Username">
                        <span asp-validation-for="Username" class="field-validation-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Password</label>
                        <input class="form-control" asp-for="Password">
                        <span asp-validation-for="Password" class="field-validation-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PasswordAgain">PasswordAgain</label>
                        <input class="form-control" asp-for="PasswordAgain">
                        <span asp-validation-for="PasswordAgain" class="field-validation-error"></span>
                    </div>



                    <button type="submit" class="btn btn-primary">Spara</button>
                </form>
            </div>

        </div>

    </div>
</div>



@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
